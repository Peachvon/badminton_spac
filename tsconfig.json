{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "module": "NodeNext",
     "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
      "paths": {
        "@config/*": ["src/config/*"],
        "@routes/*": ["src/api/routes/*"],
        "@services/*":["src/api/services/*"],
        "@utils/*":["src/api/utils/*"],
        "@controllers/*": ["src/api/controllers/*"],
        "@views/*": ["src/views/*"]
      }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}