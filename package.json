{
  "name": "my-node-app",
  "version": "1.0.0",
  "description": "A Node.js application using Express and TypeScript with Tailwind CSS for styling.",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./ -o ./dist",
    "start": "node dist/src/server.js",
    "dev": "ts-node -r tsconfig-paths/register src/server.ts",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.7",
    "@tailwindcss/postcss": "^4.1.7",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "autoprefixer": "^10.4.21",
    "ejs": "^3.1.10",
    "esbuild": "^0.25.4",
    "express": "^4.21.2",
    "postcss": "^8.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.0",
    "tailwindcss": "^4.1.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.22",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "license": "MIT"
}
