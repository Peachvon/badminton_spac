{
  "name": "my-node-app",
  "version": "1.0.0",
  "description": "A Node.js application using Express and TypeScript with Tailwind CSS for styling.",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./ -o ./dist",
    "start": "node dist/server.jsx",
    "dev": "ts-node -r tsconfig-paths/register src/server.ts",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@types/node": "*",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "autoprefixer": "^10.0.2",
    "ejs": "^3.1.10",
    "esbuild": "^0.25.4",
    "express": "^4.17.1",
    "postcss": "^8.0.9",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "tailwindcss": "^2.2.19",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "license": "MIT"
}
